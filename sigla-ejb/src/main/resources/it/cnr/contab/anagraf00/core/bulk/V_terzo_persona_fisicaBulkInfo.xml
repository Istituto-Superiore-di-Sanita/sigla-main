<bulkInfo
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://contab.cnr.it/schema/SIGLA" 
		xsi:schemaLocation="http://contab.cnr.it/schema/SIGLA http://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">

	<fieldProperty
		name="codice_fiscale"
		property="codice_fiscale"
		label="Codice fiscale"
		formatName="it.cnr.jada.util.UppercaseStringFormat"
		inputType="TEXT"
		enabledOnSearch="true" />
	<fieldProperty
		name="cognome"
		property="cognome"
		label="Cognome"
		inputType="TEXT"
		enabledOnSearch="true"
		caseSensitiveSearch="false" />
	<fieldProperty
		name="dt_nascita"
		property="dt_nascita"
		label="Data di nascita"
		inputType="TEXT"
		formatName="date_short"
		enabledOnSearch="true" 
		/>
	<fieldProperty
		name="nome"
		property="nome"
		label="Nome"
		inputType="TEXT"
		enabledOnSearch="true"
		caseSensitiveSearch="false"  />
	<fieldProperty
		name="ti_sesso"
		property="ti_sesso"
		keysProperty="ti_sessoKeys"
		label="Sesso"
		inputType="RADIOGROUP"
		enabledOnSearch="true"  />

