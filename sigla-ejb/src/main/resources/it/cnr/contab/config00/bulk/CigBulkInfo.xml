<bulkInfo
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://contab.cnr.it/schema/SIGLA"
	xsi:schemaLocation="http://contab.cnr.it/schema/SIGLA http://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">
	<fieldProperty
		name="cdCig"
		property="cdCig"
		inputType="TEXT"
		inputSize="20"
		maxLength="10"
		enabledOnEdit="false"
		enabledOnSearch="true"
		formatName="it.cnr.jada.util.UppercaseStringFormat"
		caseSensitiveSearch="false"
		nullable="false"
		label="Codice CIG" />
	<fieldProperty
		name="terzo"
		property="terzo"
		formName="searchtool"
		inputType="SEARCHTOOL"
		inputSize="9"
		maxLength="9"
		enabledOnEdit="true"
		enabledOnSearch="true"
		nullable="false"
		label="Terzo Responsabile Procedimento" />
	<fieldProperty
		name="unitaOrganizzativa"
		property="unitaOrganizzativa"
		formName="searchtool"
		inputType="SEARCHTOOL"
		nullable="false"
		enabledOnEdit="true"
		enabledOnSearch="true"
		label="Unita Organizzativa" />
	<fieldProperty
		name="dsCig"
		property="dsCig"
		inputType="TEXTAREA"
		cols="60"
		rows="5"
		maxLength="500"
		enabledOnEdit="true"
		enabledOnSearch="true"
		nullable="false"
		label="Descrizione" />
	<fieldProperty
		name="flValido"
		property="flValido"
		inputType="CHECKBOX"
		enabledOnInsert="false"
		enabledOnEdit="false"
		enabledOnSearch="false"
		label="Valido" />
	<form
		name="searchtool">
		<formFieldProperty
			name="cdCig" />
		<formFieldProperty
			name="dsCig"
			inputType="TEXT"
	        inputSize="40" />
	</form>
	<form
		name="searchtool_large">
		<formFieldProperty
			name="cdCig" />
		<formFieldProperty
			name="dsCig"
			inputType="TEXT"
	        inputSize="50" />
	</form>
	<formFieldProperty
		name="cdCig" />
	<formFieldProperty
		name="dsCig" />
	<formFieldProperty
		name="terzo" />
	<formFieldProperty
		name="unitaOrganizzativa" />
	<formFieldProperty
		name="flValido" />
		
		
	<findFieldProperty
		name="cdCig" />
	<findFieldProperty
		name="cdTerzoRup" 
		property="cdTerzoRup"
		inputType="TEXT"
		label="Terzo"/>
	<findFieldProperty
		name="cdUnitaOrganizzativa" 
		property="cdUnitaOrganizzativa"
		label="Unita' Organizzativa"
		inputType="TEXT"/>
	<findFieldProperty
		name="dsCig" />
	<findFieldProperty
		name="flValido" />

	<columnFieldProperty
		name="cdCig" />
	<columnFieldProperty
		name="cdTerzoRup" />
	<columnFieldProperty
		name="cdUnitaOrganizzativa" />
	<columnFieldProperty
		name="dsCig" />
	<columnFieldProperty
		name="flValido" />
</bulkInfo>